#! /bin/bash

echo "VSM"
trec_eval -q -c -M 1000 qrel.txt VSMresults.txt>>trecVSM.txt
trec_eval -q -c -M 1000 -m ndcg qrel.txt VSMresults.txt>>trecVSM.txt
trec_eval -q -c -M 1000 -m set_F.0.5 qrel.txt VSMresults.txt>>trecVSM.txt
trec_eval -q -c -M 1000 -m map qrel.txt VSMresults.txt>>trecVSM.txt
trec_eval -q -c -M 1000 -m bpref qrel.txt VSMresults.txt>>trecVSM.txt

echo "VSM-1"
trec_eval -q -c -M 1000 qrel.txt VSMresults-1.txt>>trecVSM-1.txt
trec_eval -q -c -M 1000 -m ndcg qrel.txt VSMresults-1.txt>>trecVSM-1.txt
trec_eval -q -c -M 1000 -m set_F.0.5 qrel.txt VSMresults-1.txt>>trecVSM-1.txt
trec_eval -q -c -M 1000 -m map qrel.txt VSMresults-1.txt>>trecVSM-1.txt
trec_eval -q -c -M 1000 -m bpref qrel.txt VSMresults-1.txt>>trecVSM-1.txt

echo "VSM-2"
trec_eval -q -c -M 1000 qrel.txt VSMresults-2.txt>>trecVSM-2.txt
trec_eval -q -c -M 1000 -m ndcg qrel.txt VSMresults-2.txt>>trecVSM-2.txt
trec_eval -q -c -M 1000 -m set_F.0.5 qrel.txt VSMresults-2.txt>>trecVSM-2.txt
