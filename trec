trec_eval -q -c -M 1000 -m ndcg qrel.txt LMresults-2.txt>>trecLM-2.txt
trec_eval -q -c -M 1000 -m set_F.0.5 qrel.txt LMresults-2.txt>>trecLM-2.txt
trec_eval -q -c -M 1000 -m map qrel.txt LMresults-2.txt>>trecLM-2.txt
trec_eval -q -c -M 1000 -m bpref qrel.txt LMresults-2.txt>>trecLM-2.txt

echo "BM25"
trec_eval -q -c -M 1000 qrel.txt BM25results.txt>>trecBM25.txt
trec_eval -q -c -M 1000 -m ndcg qrel.txt BM25results.txt>>trecBM25.txt
